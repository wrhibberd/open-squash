---
import Layout from "../layouts/Layout.astro";

import Masthead from "../components/Masthead.astro";
import Locations from "../components/Locations.astro";
import CallToAction from "../components/CallToAction.astro";

import mastheadImage from "../assets/images/gillian-and-kate.jpeg";
const image = {
	file: mastheadImage,
	alt: "Gillian and Kate",
};

import bookACourtC2AImage from "../assets/images/1A6A4359.jpg";
const bookACourtC2A = {
	file: bookACourtC2AImage,
	alt: "Drill session at Open Squash",
	position: "object-top",
};

import bryantPark from "../assets/images/bryant-park.jpg";
const bryantParkImage = {
	file: bryantPark,
	alt: "Image of players at the Open Squash Bryant Park location",
	position: "object-center",
};

const title = "Open Squash";
const seoTitle = "Open Squash";
const seoDescription =
	"When you’re part of Open Squash—you’re part of a movement. A movement to open up Squash, and all its health and social benefits, to more people.";
---

<Layout {title} {seoTitle} {seoDescription}>
	<Masthead
		heading="Squash<br/>is for<br/>Everyone"
		primaryColour="green"
		secondaryColour="blue"
		{image}
	/>
	<Locations />
	<CallToAction
		text="Book a court, lesson, or clinic."
		theme="red"
		image={bookACourtC2A}
		position="right"
		textSize="large"
		links={[
			{
				text: "Bryant Park",
				url: "https://bryantpark.opensquash.org/programs?facility_id=645&category=&search=&view=grid",
				style: "hover:bg-red hover:text-white border-red focus:ring-red focus:ring-offset-white",
				external: true,
			},
			{
				text: "FiDi",
				url: "https://fidi.opensquash.org/programs?facility_id=646&category=&search=&view=grid",
				style: "bg-red text-white hover:bg-white hover:text-red border-red focus:ring-red focus:ring-offset-white",
				external: true,
			},
		]}
	/>
	<CallToAction
		text="Join the Community. Meet new Friends. Get Fit. Have Fun."
		theme="blue"
		image={bryantParkImage}
		position="left"
		textSize="small"
		links={[
			{
				text: "Join Bryant Park",
				url: "https://bryantpark.opensquash.org/f/opensquashbryantpark/memberships",
				style: "hover:bg-blue hover:text-blue-light border-blue focus:ring-blue focus:ring-offset-blue-light",
				external: true,
			},
			{
				text: "Join FiDi ",
				url: "https://fidi.opensquash.org/f/opensquashfidi/memberships",
				style: "bg-blue text-blue-light hover:bg-blue-light hover:text-blue border-blue focus:ring-blue focus:ring-offset-blue-light",
				external: true,
			},
		]}
	/>
</Layout>
