---
import Layout from "../layouts/Layout.astro";

import Masthead from "../components/Masthead.astro";
import mastheadImage from "../assets/images/gillian-and-kate.jpeg";
import Locations from "../components/Locations.astro";
const image = {
	file: mastheadImage,
	alt: "Gillian and Kate",
};

const title = "Open Squash";
const seoTitle = "Open Squash";
const seoDescription =
	"When you’re part of Open Squash—you’re part of a movement. A movement to open up Squash, and all its health and social benefits, to more people.";
---

<Layout {title} {seoTitle} {seoDescription}>
	<Masthead
		heading="Squash<br/>is for<br/>Everyone"
		primaryColour="green"
		secondaryColour="blue"
		{image}
	/>
	<Locations />
</Layout>
