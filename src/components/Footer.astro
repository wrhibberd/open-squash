---
import Icon from "../assets/svgs/Icon.astro";
import SocialLinks from "../components/SocialLinks.astro";
---

<footer class="px-10 sm:px-20">
	<nav
		class="bg-black text-white p-20 grid gap-20 grid-cols-1 sm:grid-cols-12"
	>
		<div class="row-start-1 sm:hidden">
			<a
				href="/"
				class="text-white hover:text-green transition-colors inline-block"
			>
				<Icon classes="w-60 h-60" />
			</a>
		</div>
		<div class="sm:col-span-6 lg:col-span-3 space-y-20 sm:space-y-40">
			<a
				href="/"
				class="text-white hover:text-green transition-colors sm:inline-block hidden"
			>
				<Icon classes="w-60 h-60" />
			</a>
			<p>
				We are a 501(c)(3) nonprofit organization on a mission: to make
				the game of squash accessible to everyone.
			</p>
			<SocialLinks />
			<ul>
				<li>
					<a
						href="/terms-of-service-privacy-policy"
						class="hover:text-green transition-colors"
						>Terms of Service & Privacy Policy</a
					>
				</li>
				<li>
					<a
						href="/membership-terms"
						class="hover:text-green transition-colors"
						>Membership Terms</a
					>
				</li>
			</ul>
		</div>
		<div class="row-start-2 sm:row-start-auto sm:col-span-2 sm:col-start-7">
			<h3 class="sm:pt-100 font-heading">Open Squash</h3>
			<ul>
				<li>
					<a href="/about" class="hover:text-green transition-colors"
						>About</a
					>
				</li>
				<li>
					<a
						href="/summer-programs"
						class="hover:text-green transition-colors"
						>Summer Squash Camp</a
					>
				</li>
				<li>
					<a href="/donate" class="hover:text-green transition-colors"
						>Donate</a
					>
				</li>
				<li>
					<a
						href="/contact-us"
						class="hover:text-green transition-colors">Contact</a
					>
				</li>
			</ul>
		</div>
		<div class="row-start-3 sm:row-start-auto sm:col-span-2 sm:col-start-9">
			<h3 class="sm:pt-100 font-heading">Bryant Park</h3>
			<ul>
				<li>
					<a
						href="https://bryantpark.opensquash.org/programs?facility_id=645&category=&search=&view=grid"
						target="_blank"
						class="hover:text-green transition-colors">Schedule</a
					>
				</li>
				<li>
					<a
						href="https://bryantpark.opensquash.org/f/opensquashbryantpark/memberships"
						target="_blank"
						class="hover:text-green transition-colors"
						>Become A Member</a
					>
				</li>
			</ul>
			<h3 class="font-heading pt-20">FiFi</h3>
			<ul>
				<li>
					<a
						href="https://fidi.opensquash.org/programs?facility_id=646&category=&search=&view=grid"
						target="_blank"
						class="hover:text-green transition-colors">Schedule</a
					>
				</li>
				<li>
					<a
						href="https://fidi.opensquash.org/f/opensquashfidi/memberships"
						target="_blank"
						class="hover:text-green transition-colors"
						>Become A Member</a
					>
				</li>
			</ul>
		</div>
		<div
			class="row-start-4 sm:row-start-auto sm:col-span-2 sm:col-start-11"
		>
			<h3 class="sm:pt-100 font-heading">Members</h3>
			<ul>
				<li>
					<a href="" class="hover:text-green transition-colors"
						>Login</a
					>
				</li>
				<li>
					<a href="" class="hover:text-green transition-colors"
						>Download App</a
					>
				</li>
			</ul>
		</div>
	</nav>
</footer>
